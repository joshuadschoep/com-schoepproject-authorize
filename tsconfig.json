{
    "compilerOptions": {
        "outDir": "./build",
        "baseUrl": "./src",
        "target": "ESNext",
        "allowJs": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "strict": true,
        "module": "ES2015",
        "moduleResolution": "node",
        "noEmit": true
    },
    "include": ["src"],
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}
